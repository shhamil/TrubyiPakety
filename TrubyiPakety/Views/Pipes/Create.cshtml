@model TrubyiPakety.Models.Pipe

@{
    ViewData["Title"] = "Create Pipe";
}

<h2>Create Pipe</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Number" class="control-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quality" class="control-label"></label>
        <select asp-for="Quality" class="form-control">
            <option value="Good">Good</option>
            <option value="Defective">Defective</option>
        </select>
        <span asp-validation-for="Quality" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SteelGrade" class="control-label"></label>
        <input asp-for="SteelGrade" class="form-control" />
        <span asp-validation-for="SteelGrade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Diameter" class="control-label"></label>
        <input asp-for="Diameter" class="form-control" />
        <span asp-validation-for="Diameter" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Length" class="control-label"></label>
        <input asp-for="Length" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}